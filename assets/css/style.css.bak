*{
	padding:0;
	margin:0;
	box-sizing:border-box;
	

}
/*---------------------------------------helper class-------------------------------- */

.col3, .col6, .col2, .col8, .col12, .col5, .col7, .col10{
     float:left;
	padding:0 15px;
}
.col10{
	width:calc((100% * 10) / 12);
}
.col12{
	width:100%;
}
.col8{
	width:calc((100% * 8) / 12);
}
.col2{
	width:calc((100% * 2) / 12);
}
.col3{
	width:25%;
	 
}
.col6{
	width:50%;
}
.col5{
	width:calc((100% * 5) / 12);
}
.col7{
	width:calc((100% * 7) / 12);
}
.row >:first-child{
	padding-left:0;
}
.row >:last-child{
	padding-right:0;
}
.text-center{
	text-align:center;
}
.text-right{
	text-align:right;
}
.ml-onegrid{
	margin-left:calc(100% / 12);
}
.mt-45{
	margin-top:45px;
}
.mb-10{
	margin-bottom:10px;
}
.mb-16{
	margin-bottom:16px;
}
.mt-70{
	margin-top:70px;
}
.mb-25{
		margin-bottom:25px;
}
.mb-50{
		margin-bottom:50px;
}
.mr-30{
	margin-right:30px;
}


a:link,
a:hover,
a:focus,
a:active{
	text-decoration:none;
}
.container{
	width:1145px;
	margin:0 auto;
}
.row,
.row::after,
.row::before{
	     clear:both;
		 display:table;
		 width:100%;
}
/* ---------------------------------------header section--------------------------------------------------- */
.header{
	padding:25px 0px 0px;
}

.navbar li{
	display:inline-block;
	list-style:none;
	margin:0 5px;
}

.navbar li a{
	color:#006a4d;
	font-size:18px;
	font-weight:bold;
	cursor:pointer;
	display:inline-block;
	padding:25px 15px 15px;
    font-family: 'Open Sans', sans-serif;
}
.navbar li a:hover,
.navbar li a:focus,
.navbar li a:active{
	color:#69be28;
}

.btn{
	padding:20px 15px;
	float:right;
	color:#ffffff;
	background-color:#69be28;
	text-transform:uppercase;
	border:0;
	outline:none;
	border-radius:3px;
	border:1px solid #69be28;
	font-size:18px;
	font-weight:bold;
	cursor:pointer;
	margin-bottom:0px;
}
.btn:hover,
.btn:focus,
.btn:active{
	color:#69be28;
	background-color:#ffffff;
}

/* ---------------------------------- heroimage--------------------------------- */

.heroimage{
	background-image:url(../img/heroimg.jpg);
	width:100%;
	height:100vh;
	position:relative;
	background-size:cover;
}
.heading{
	top:50%;
	left:50%;
	transform:translate(-50%, -50%);
	position:absolute;
	z-index:1;
}
.heading h1{
	color:#ffffff;
	font-size:58px;
	font-weight:bold;
	text-transform:uppercase;
	margin:26px 0 50px;
}
.heading h3{
	color:#ffffff;
	font-size:32px;
	font-weight:bold;
	margin-bottom:35px;
}
.heading h4{
	color:#ffffff;
	font-size:22px;
	font-weight:bold;
	margin-bottom:35px;
}
/* ---------------------------------------------- section event----------------------------------------------------------------*/
.event{
	padding:125px 0 120px;
}
.information-heading{
	color:#006a4d;
	font-size:36px;
}
.information-para{
	font-size:16px;
	padding:20px 0 25px;
	line-height:18px;
	font-family:;
}
.information-subheading{
	color:#006a4d;
	font-size:20px;

}

/* -------------------------------------------------speaker section--------------------------------------------------------------- */

.speakers{
	padding:105px 0 99px;
	background-color:#006a4d;
}
.speaker-heading{
	font-size:36px;
	color:#ffffff;	
}
.speaker-para{
	font-size:16px;
	color:#ffffff;
	line-height:19px;
}
.speaker-img img{
   border-radius:50%;
   border:4px solid #fff;
   width:100%;
   height:100%;
}
.img-heading{
	font-size:18px;
	color:#ffffff;
	padding:12px 0 10px;
}
.img-subheading{
	font-size:14px;
	color:#ffffff;
	line-height:19px;
}
.btn1{
	padding:15px 20px;
	color:#ffffff;
	background-color:#006a4d;
	text-transform:uppercase;
	border:0;
	outline:none;
	border-radius:5px;
	border:3px solid #ffffff;
	cursor:pointer;
}
.btn1:hover,
.btn1:focus,
.btn:active{
	color:#006a4d;
	background-color:#ffffff;
}

/* ----------------------------------------------------------footer section------------------------------------------------- */

.footer{
	padding:84px 0 77px;
	background-color:#3c3c3c;
}
.footer-link li{
	display:inline-block;
}
.footer-link li a{
	font-size:16px;
	color:#ffffff;
}
.footer-heading{
	font-size:18px;
	color:#ffffff;
	
}
.footer-icons li{
	display:inline-block;
	margin:0 5px;
	
}	
.footer-icons li a{
	display:inline-block;
	list-style:none;
	color:#ffffff;
	border-radius:60px;
	border:3px solid #fff;
	padding:10px 10px;
}		